<h3>All Recordings</h3>
<% @recordings.each do |recording| %>
  <div class='recording-list'>
    <div class='vote'>
      <% if current_user? %>
        <div class="vote-button upvote" id="recording-<%= recording.id %>-up-vote">
          ⇧
        </div>
      <% end %>
      <div class="total-score">
        <%= recording.total_score %>
      </div>
      <% if current_user? %>
        <div class="vote-button downvote" id="recording-<%= recording.id %>-down-vote">
          ⇩
        </div>
      <% end %>
    </div>
    <div class='recording-box'>
      Title: <%= recording.title %><br>
      Landmark: <%= link_to recording.landmark.name, landmark_path(recording.landmark) %><br>
      Creator: <%= link_to recording.user.display_name, user_path(recording.user) %>
      <%= render partial: 'shared/audio_player', object: recording %>
    </div>
  </div>
<% end %>
