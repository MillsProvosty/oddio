<!DOCTYPE html>
<html>
  <head>
    <title>Oddio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="form-group search-field">
      <%= form_tag(:landmarks, method: :get) do %>
        <%= text_field_tag(:query) %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
