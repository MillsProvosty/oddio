<%= form_for @user do |f| %>
  <% f.options[:html][:class] += ' form-group' %>
  <%= f.label :display_name %>
  <%= f.text_field :display_name, class: 'form-control form-field-register', required: true %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control form-field-register', required: true %>
  <br>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control form-field-register', required: true %>
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control form-field-register' %>
  <br>
  <div class='center-contents'>
    <%= f.submit "Let's Get Started", class: 'btn btn-primary' %>
  </div>
<% end %>
